<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hongcheng.app">

    <application
            android:name=".application.BaseApplication"
            android:allowBackup="true"
            android:icon="@mipmap/main_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">


        <activity android:name="com.example.hongcheng.app.activity.WelcomeActivity"
                  android:theme="@style/AppFullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.example.hongcheng.app.activity.MainActivity"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait"
                  android:theme="@style/AppBaseTheme"
                  android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

        <activity android:name="com.example.hongcheng.app.activity.AnimationDetailActivity"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait"
                  android:theme="@style/AppBaseTheme"
                  android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity android:name="com.example.hongcheng.app.activity.RecordDetailActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

        <activity android:name="com.example.hongcheng.app.activity.AddCardActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>

        <activity android:name="com.example.hongcheng.app.activity.AddCardInfoActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>
        <activity android:name=".activity.SearchActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>
    </application>

</manifest>